<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_user_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:background="@drawable/login_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="0px">

            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/aqi"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"

                app:cpv_maxValue="300"

                app:cpv_autoTextSize="false"
                app:cpv_textSize="30dp"

                app:cpv_rimWidth="10dp"
                app:cpv_barWidth="11dp"

                app:cpv_showUnit="true"
                app:cpv_unit="AQI"
                app:cpv_unitPosition="right_top"
                app:cpv_unitSize="15dp"

                app:cpv_innerContourColor="@color/contourColor"
                app:cpv_outerContourColor="@color/contourColor"

                app:cpv_rimColor="@color/rimColor"
                app:cpv_barColor1="@color/barColor1"
                app:cpv_barColor2="@color/barColor2"
                app:cpv_barColor3="@color/barColor3"/>

            <TextView
                android:id="@+id/quality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0px"

                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/impplications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textStyle="bold"
                android:textSize="15dp"
                android:padding="5dp"
                android:textColor="#000"
                android:text="Implications :" />

            <TextView
                android:id="@+id/imp_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="15dp"
                android:padding="5dp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/advices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textStyle="bold"
                android:textSize="15dp"
                android:padding="5dp"
                android:textColor="#000"
                android:text="Advisory :" />

            <TextView
                android:id="@+id/advices_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="15dp"
                android:padding="5dp"
                android:textColor="#000" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
